<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="417.0" prefWidth="609.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RoomLogger">
    <TabPane prefHeight="417.0" prefWidth="609.0" tabClosingPolicy="UNAVAILABLE">
        <Tab text="Logger">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="500" prefWidth="700.0">
                <CheckBox fx:id="logLocationCheckbox" layoutX="51.0" layoutY="47.0" mnemonicParsing="false" text="Mark new Location" />
                <Label fx:id="infoLabel" layoutX="39.0" layoutY="363.0" prefHeight="17.0" prefWidth="531.0" text="Please Reload the Room for it to work properly." />
                <TextArea fx:id="consoleTextArea" layoutX="39.0" layoutY="109.0" prefHeight="200.0" prefWidth="531.0" style="-fx-control-inner-background:#000000; -fx-font-family: Consolas; -fx-highlight-fill: #00ff00; -fx-highlight-text-fill: #000000; -fx-text-fill: #ffffff;" />
                <TextField fx:id="customLocationNameTextField" layoutX="383.0" layoutY="43.0" />
                <Label fx:id="customNameLabel" layoutX="298.0" layoutY="47.0" text="Custom Name" />
                <CheckBox fx:id="isSittedLocationCheckbox" layoutX="195.0" layoutY="47.0" mnemonicParsing="false" text="is Sitted?" />
                <CheckBox fx:id="logChatCheckbox" layoutX="374.0" layoutY="318.0" mnemonicParsing="false" text="Log Chat" />
                <CheckBox fx:id="logEntersLeavesCheckbox" layoutX="230.0" layoutY="318.0" mnemonicParsing="false" text="Log Enters/Leaves" />
                <CheckBox fx:id="logChatBotsCheckbox" layoutX="458.0" layoutY="318.0" mnemonicParsing="false" text="Log Chat Bots" />
                <CheckBox fx:id="logUserActionsCheckbox" layoutX="95.0" layoutY="318.0" mnemonicParsing="false" text="Log User Actions" />
            </AnchorPane>
        </Tab>
        <Tab text="Webhook Configuration">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                <Label fx:id="webhookInfoLabel" layoutX="46.0" layoutY="339.0" prefHeight="17.0" prefWidth="531.0" />
                <Label layoutX="62.0" layoutY="98.0" text="Discord Webhook URL:" />
                <CheckBox fx:id="enableWebhookCheckbox" layoutX="233.0" layoutY="34.0" mnemonicParsing="false" onAction="#toggleWebhookClick" text="Enable Webhook" />
                <Button fx:id="testWebhookCheckbox" layoutX="464.0" layoutY="122.0" mnemonicParsing="false" onAction="#testWebhookClick" text="TEST" />
                <TextField fx:id="webhookUrlTextField" layoutX="62.0" layoutY="122.0" prefHeight="25.0" prefWidth="395.0" />
                <AnchorPane layoutX="62.0" layoutY="175.0" prefHeight="196.0" prefWidth="479.0">
                    <CheckBox fx:id="logChatWebhookCheckbox" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" text="Log Chat Messages" />
                    <CheckBox fx:id="logLocationWebhookCheckbox" layoutX="295.0" layoutY="62.0" mnemonicParsing="false" text="Send Locations" />
                    <CheckBox fx:id="logEntersLeavesWebhookCheckbox" layoutX="295.0" layoutY="14.0" mnemonicParsing="false" text="Log Enters/Leaves" />
               <CheckBox fx:id="mentionWhispersWebhookCheckbox" layoutX="17.0" layoutY="62.0" mnemonicParsing="false" onAction="#onClickMentions" text="Mention Whispers" />
               <TextField fx:id="discordUsernamesTextField" layoutX="17.0" layoutY="106.0" prefHeight="25.0" prefWidth="149.0" />
               <Label layoutX="17.0" layoutY="89.0" text="Discord User IDS:" />
               <Label layoutX="176.0" layoutY="110.0" text="You can separate User IDS by &quot;,&quot; to mention more than 1" />
               <CheckBox fx:id="mentionLocationsWebhookCheckbox" layoutX="153.0" layoutY="62.0" mnemonicParsing="false" text="Mention Locations" onAction="#onClickMentions"/>
               <CheckBox onAction="#hideWhispersClick" fx:id="hideWhispersWebhookCheckbox" layoutX="153.0" layoutY="14.0" mnemonicParsing="false" text="Don't Send Whispers" />
               <Label layoutX="176.0" layoutY="131.0" prefHeight="17.0" prefWidth="294.0" text="To get User IDs go to Advanced check Developer Mode" />
               <Label layoutX="176.0" layoutY="146.0" prefHeight="17.0" prefWidth="294.0" />
               <Label layoutX="176.0" layoutY="155.0" prefHeight="17.0" prefWidth="294.0" text="Right Click a Discord User and &quot;Copy User ID&quot;" />
                </AnchorPane>
            </AnchorPane>
        </Tab>
    </TabPane>
</AnchorPane>
